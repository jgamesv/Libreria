      <Pane prefHeight="200.0" prefWidth="350.0">
         <children>
            <PasswordField fx:id="pass" layoutX="130.0" layoutY="113.0" />
            <Label layoutX="49.0" layoutY="117.0" text="Contraseña" />
            <TextField fx:id="name" layoutX="130.0" layoutY="61.0" />
            <Label layoutX="49.0" layoutY="65.0" prefHeight="17.0" prefWidth="60.0" text="Nombre" />
